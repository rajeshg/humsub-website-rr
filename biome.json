{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/*.css"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"recommended": true,
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["error", "warn"]
					}
				}
			},
			"style": {
				"recommended": true,
				"useSelfClosingElements": "off"
			},
			"complexity": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"correctness": {
				"recommended": true,
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedLabels": "error",
				"noUnusedFunctionParameters": "error"
			},
			"a11y": {
				"recommended": true,
				"useSemanticElements": "warn"
			},
			"nursery": {
				"recommended": true,
				"noProcessEnv": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	}
}
